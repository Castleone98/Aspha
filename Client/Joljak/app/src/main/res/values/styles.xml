<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="InstagramSliderStyle" parent="Widget.MaterialComponents.Slider">
        <!-- Track 색상 설정 -->
        <item name="trackColorActive">#0095F6</item> <!-- 활성 상태일 때 Track 색상 -->
        <item name="trackColorInactive">#B0BEC5</item> <!-- 비활성 상태일 때 Track 색상 -->

        <!-- Thumb 색상 설정 -->
        <item name="thumbColor">#0095F6</item> <!-- Thumb 색상 -->
    </style>

    <style name="CustomMaterialButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@drawable/button_selector</item>
        <item name="elevation">10dp</item>
        <item name="android:textColor">@drawable/text_color_selector</item>
        <item name="android:elevation">2dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="CustomOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="strokeColor">@color/mtrl_btn_stroke_color_selector</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/mtrl_text_btn_text_color_selector</item>
        <item name="backgroundTint">@color/button_selector</item>
        <item name="iconPadding">4dp</item>
        <item name="iconTint">@color/mtrl_text_btn_text_color_selector</item>
        <item name="rippleColor">@color/mtrl_btn_text_btn_ripple_color</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#0095F6</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">#B0BEC5</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>